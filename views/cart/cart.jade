extends ../layout

block content
  .container
    h1= title

    if cartItems.length
      ul.cart-items
        each item in cartItems
          li.cart-item
            span.cart-product #{item.product_name}
            span.cart-details $#{item.price_per_unit.toFixed(2)} x #{item.quantity}
            form(method="POST", action="/cart/remove")
              input(type="hidden", name="cart_item_id", value=item.id)
              button.remove-btn(type="submit") Remove
      a.btn(href="/cart/checkout") Checkout
    else
      p Your cart is empty.
      a.back-to-shop(href="/products") Browse Products
